<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Card.BottomSheet.Welcome" parent="Theme.Material3.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:translationY">160dp</item>
        <item name="android:paddingBottom">160dp</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
        <!-- PeekHeight should be updated in coordinator behaviors too if any -->
        <item name="behavior_peekHeight">392dp</item>
        <item name="behavior_draggable">true</item>
        <item name="cardCornerRadius">48dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLow</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
    </style>

    <style name="Widget.App.Card" parent="Theme.Material3.DayNight">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLowest</item>
    </style>
    <style name="Widget.App.Card.Home" parent="Widget.App.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">16dp</item>
    </style>
    <style name="Widget.App.Card.List" parent="Widget.App.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>
</resources>