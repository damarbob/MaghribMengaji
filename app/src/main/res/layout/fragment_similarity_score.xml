<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.similarityscore.SimilarityScoreFragment">

    <Button
        android:id="@+id/similarityScoreButtonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/materialIconButtonFilledTonalStyle"
        app:icon="@drawable/outline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/similarityScoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:text="@string/similarity_score"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/similarityScoreTextViewScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="00"
        android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/similarityScoreCircularProgressScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/similarityScoreCircularProgressScore" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/similarityScoreCircularProgressScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:progress="0"
        app:indicatorSize="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/similarityScoreTextView"
        app:trackThickness="16dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/similarityScoreCircularProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:indeterminate="true"
        app:indicatorSize="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/similarityScoreTextView"
        app:trackThickness="16dp" />

    <TextView
        android:id="@+id/similarityScoreTextViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_score_is_ssr_press_upload_to_send_your_score"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/similarityScoreButtonUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/similarityScoreButtonUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/upload"
        app:layout_constraintBottom_toTopOf="@id/similarityScoreButtonRetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Material3.Button.Icon"
        app:icon="@drawable/outline_cloud_upload_24"/>
<!--        app:iconGravity="textStart"-->
<!--        />-->

    <Button
        android:id="@+id/similarityScoreButtonRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:icon="@drawable/outline_camera_alt_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>