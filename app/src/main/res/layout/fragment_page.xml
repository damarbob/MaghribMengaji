<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".ui.page.PageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/pageAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/pageCollapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextAppearance="@style/Widget.App.P.Bold"
            app:expandedTitleGravity="bottom"
            app:expandedTitleMarginBottom="48dp"
            app:expandedTitleTextAppearance="@style/Widget.App.H1.Bold"
            app:extraMultilineHeightEnabled="false"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:maxLines="1"
            app:title="@string/page_x"
            app:titleCollapseMode="scale"
            app:titleEnabled="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient_background_horizontal"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="-0dp"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_quran"
                    android:translationY="-16dp" />

            </FrameLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/pageToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:menu="@menu/menu_score"
                app:navigationIcon="@drawable/arrow_back_24px" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_headerx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/maghrib_mengaji_primary">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="-0dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="192dp"
                        android:layout_height="192dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_quran"
                        android:translationY="-16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/pageTextViewVolume"
                        style="@style/Widget.App.H5.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volume_x"
                        android:textColor="?attr/colorOnPrimary" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/pageTextViewPage"-->
                    <!--                        style="@style/Widget.App.H5"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="@string/page_x"-->
                    <!--                        android:textColor="@color/design_default_color_on_primary" />-->

                </LinearLayout>

                <Button
                    android:id="@+id/homeButtonMenu"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="32dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    app:icon="@drawable/more_vert_24px"
                    app:iconTint="?attr/colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_surfaceContainerHigh">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/pageProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

                <ImageView
                    android:id="@+id/pageImageViewPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/quran_page_image_description"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/vector_maghrib_mengaji"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/pageImageViewScannedResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/quran_page_image_description"
                    android:maxHeight="720dp"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pageRelativeLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/pageButtonPrevious"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/round_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pageButtonReciteOLD"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/recite"
            android:visibility="gone"
            app:icon="@drawable/auto_stories_24px"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pageButtonPrevious"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pageButtonSubmitOLD"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:visibility="gone"
            app:icon="@drawable/photo_camera_24px"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pageButtonForward"
            app:layout_constraintStart_toEndOf="@+id/pageButtonPrevious"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pageButtonForward"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:icon="@drawable/round_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/pageButtonSubmit"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/submit"
        app:icon="@drawable/outline_camera_alt_24"
        app:layout_anchor="@id/pageAppBarLayout"
        app:layout_anchorGravity="bottom|end" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/pageButtonCheckResult"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/check_result"
        app:icon="@drawable/task_24px"
        app:layout_anchor="@id/pageAppBarLayout"
        app:layout_anchorGravity="bottom|end" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/pageButtonRecite"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/recite"
        android:translationY="60dp"
        android:visibility="gone"
        app:icon="@drawable/auto_stories_24px"
        app:layout_anchor="@id/pageAppBarLayout"
        app:layout_anchorGravity="bottom|end" />

    <include
        android:id="@+id/pageBottomSheetCheckResult"
        layout="@layout/bottom_sheet_check_result"
        android:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>