<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".ui.pagelist.PageListFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_headerx"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/maghrib_mengaji_primary">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="-0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:translationY="-16dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_quran"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/pageListTextViewVolume"
                style="@style/Widget.App.H5.Bold"
                android:textColor="@color/design_default_color_on_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volume_x" />

            <TextView
                android:id="@+id/pageListTextPageRange"
                style="@style/Widget.App.H5"
                android:textColor="@color/design_default_color_on_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_x" />

        </LinearLayout>

        <Button
            android:id="@+id/homeButtonMenu"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical"
            app:icon="@drawable/more_vert_24px"
            app:iconTint="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pageListRecyclerViewPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"/>

</LinearLayout>