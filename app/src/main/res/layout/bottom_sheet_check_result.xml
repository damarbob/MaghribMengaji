<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheetCheckResult"
    style="@style/Widget.Material3.BottomSheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:transitionGroup="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/checkResultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:text="@string/overall_score"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/checkResultTextViewOverallScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="00"
                android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/checkResultCircularProgressScore"
                app:layout_constraintEnd_toEndOf="@id/checkResultCircularProgressScore"
                app:layout_constraintStart_toStartOf="@id/checkResultCircularProgressScore"
                app:layout_constraintTop_toTopOf="@+id/checkResultCircularProgressScore" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/checkResultCircularProgressScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:progress="100"
                android:indeterminate="false"
                app:showAnimationBehavior="outward"
                app:trackCornerRadius="8dp"
                style="@style/Widget.Material3.LinearProgressIndicator"
                app:indicatorSize="128dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkResultTextView"
                app:trackThickness="16dp" />

            <TextView
                android:id="@+id/checkResultTextViewPreliminaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/similarity"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintTop_toBottomOf="@id/checkResultCircularProgressScore" />

            <TextView
                android:id="@+id/checkResultTextViewPreliminaryResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintTop_toTopOf="@+id/checkResultProgressIndicatorPreliminary" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/checkResultProgressIndicatorPreliminary"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:progress="100"
                app:indicatorSize="72dp"
                app:layout_constraintEnd_toStartOf="@id/checkResultProgressIndicatorTidiness"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkResultTextViewPreliminaryText"
                app:trackCornerRadius="4dp"
                app:trackThickness="8dp"
                app:indicatorColor="@color/maghrib_mengaji_primary_variant"/>

            <TextView
                android:id="@+id/checkResultTextViewTidinessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tidiness"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorTidiness"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorTidiness"
                app:layout_constraintTop_toBottomOf="@id/checkResultCircularProgressScore" />

            <TextView
                android:id="@+id/checkResultTextViewTidinessResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/checkResultProgressIndicatorTidiness"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorTidiness"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorTidiness"
                app:layout_constraintTop_toTopOf="@+id/checkResultProgressIndicatorTidiness" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/checkResultProgressIndicatorTidiness"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:progress="100"
                app:indicatorSize="72dp"
                app:layout_constraintStart_toEndOf="@id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintTop_toBottomOf="@id/checkResultTextViewTidinessText"
                app:layout_constraintEnd_toStartOf="@id/checkResultProgressIndicatorAccuracy"
                app:trackThickness="8dp"
                app:trackCornerRadius="4dp" />

            <TextView
                android:id="@+id/checkResultTextViewAccuracyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/accuracy"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintTop_toBottomOf="@id/checkResultCircularProgressScore" />

            <TextView
                android:id="@+id/checkResultTextViewAccuracyResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintTop_toTopOf="@+id/checkResultProgressIndicatorAccuracy" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/checkResultProgressIndicatorAccuracy"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:progress="100"
                app:indicatorSize="72dp"
                app:layout_constraintStart_toEndOf="@id/checkResultProgressIndicatorTidiness"
                app:layout_constraintTop_toBottomOf="@id/checkResultTextViewAccuracyText"
                app:layout_constraintEnd_toStartOf="@id/checkResultProgressIndicatorConsistency"
                app:trackThickness="8dp"
                app:trackCornerRadius="4dp"
                app:indicatorColor="@color/md_theme_inversePrimary"/>

            <TextView
                android:id="@+id/checkResultTextViewConsistencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/consistency"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorConsistency"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorConsistency"
                app:layout_constraintTop_toBottomOf="@id/checkResultCircularProgressScore" />

            <TextView
                android:id="@+id/checkResultTextViewConsistencyResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/checkResultProgressIndicatorConsistency"
                app:layout_constraintEnd_toEndOf="@+id/checkResultProgressIndicatorConsistency"
                app:layout_constraintStart_toStartOf="@+id/checkResultProgressIndicatorConsistency"
                app:layout_constraintTop_toTopOf="@+id/checkResultProgressIndicatorConsistency" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/checkResultProgressIndicatorConsistency"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:progress="100"
                app:indicatorSize="72dp"
                app:layout_constraintStart_toEndOf="@id/checkResultProgressIndicatorAccuracy"
                app:layout_constraintTop_toBottomOf="@id/checkResultTextViewConsistencyText"
                app:layout_constraintEnd_toEndOf="parent"
                app:trackThickness="8dp"
                app:trackCornerRadius="4dp"
                app:indicatorColor="@color/maghrib_mengaji_primary"/>

            <ImageView
                android:id="@+id/checkResultImageViewStudentPageImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:maxHeight="720dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:contentDescription="@string/quran_page_image_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkResultProgressIndicatorPreliminary"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</com.google.android.material.card.MaterialCardView>