<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_header"
        android:background="@drawable/gradient_background_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="32dp"
        android:paddingHorizontal="24dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maghrib_mengaji_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnPrimary" />

        <Button
            android:id="@+id/homeButtonMenu"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            app:icon="@drawable/more_vert_24px"
            app:iconTint="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="24dp">

        <TextView
            android:id="@+id/homeTextTitle"
            style="@style/Widget.App.H5.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_name" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="192dp"
                    android:layout_height="0dp"
                    android:src="@drawable/img_quran"
                    android:scaleType="fitCenter"
                    android:rotation="60"
                    android:layout_marginBottom="-0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/Widget.App.P.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_written" />

                    <TextView
                        android:id="@+id/homeTextLastWritten"
                        style="@style/Widget.App.H5.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quran_page" />

                    <TextView
                        android:id="@+id/homeTextLastWrittenVolume"
                        style="@style/Widget.App.H5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quran_volume" />

                    <TextView
                        style="@style/Widget.App.P"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16sp"
                        android:text="@string/with_ustadh" />

                    <TextView
                        android:id="@+id/homeTextUstadhName"
                        style="@style/Widget.App.H5.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Fikri Hizbullah"
                        android:textColor="?attr/colorPrimary" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/homeProgressIndicatorPagePercentage"
                    style="@style/Widget.Material3.LinearProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:progress="80"
                    app:indicatorSize="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackCornerRadius="2dp" />

                <TextView
                    android:id="@+id/homeTextPagePercentage"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    app:layout_constraintBottom_toBottomOf="@+id/homeProgressIndicatorPagePercentage"
                    app:layout_constraintEnd_toEndOf="@+id/homeProgressIndicatorPagePercentage"
                    app:layout_constraintStart_toStartOf="@+id/homeProgressIndicatorPagePercentage"
                    app:layout_constraintTop_toTopOf="@+id/homeProgressIndicatorPagePercentage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            style="@style/Widget.App.H5.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:text="@string/in_progress" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecyclerViewVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="-16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"/>

    </LinearLayout>

</LinearLayout>